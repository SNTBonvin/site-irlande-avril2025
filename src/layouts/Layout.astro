---
interface Props {
  title?: string;
}

const { title = "Voyage en Irlande" } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style is:global>
      :root {
        --primary-color: #169B62;
        --secondary-color: #FF883E;
        --bg-color: #f9fafb;
        --text-color: #111827;
      }

      body {
        background-color: var(--bg-color);
        color: var(--text-color);
        font-family: system-ui, sans-serif;
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      a:hover {
        color: var(--secondary-color);
      }
    </style>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-[#169B62] text-white shadow-md">
      <nav class="container mx-auto px-4 py-3">
        <div class="flex justify-between items-center">
          <a href="/" class="text-2xl font-bold">Voyage en Irlande</a>
          <div class="space-x-6 font-semibold">
            <a href="/" class="hover:text-[#FF883E]">Accueil</a>
            <a href="/journal" class="hover:text-[#FF883E]">Journal</a>
            <a href="/notifications" class="hover:text-[#FF883E]">Notifications</a>
            <a href="/admin-login" class="hover:text-[#FF883E]">Connexion</a>
          </div>
        </div>
      </nav>
    </header>
    

    <main class="flex-grow container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-[#169B62] text-white py-6 text-center">
      <p>&copy; {new Date().getFullYear()} - Propuls√© par GoodWine Family</p>
    </footer>
  </body>
</html>
