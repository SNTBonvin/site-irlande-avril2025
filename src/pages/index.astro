---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { supabase } from "../lib/supabaseClient";
import { parse } from "cookie";

// (Optionnel) Protection admin via cookie
// const cookie = Astro.request.headers.get("cookie") || "";
// const { admin } = parse(cookie);

const articles = (await getCollection("articles")).sort(
  (a, b) => new Date(b.data.pubDate) - new Date(a.data.pubDate)
);

const { data: counts, error } = await supabase
  .from("comments")
  .select("slug", { count: "exact", head: false });

if (error) {
  console.warn("Erreur Supabase :", error.message);
}

const commentCounts = {};
counts?.forEach(({ slug }) => {
  commentCounts[slug] = (commentCounts[slug] || 0) + 1;
});
---

<Layout>
  <section class="px-4 py-8 max-w-6xl mx-auto relative">
    <div class="absolute top-4 right-4">
      <a
        href="/admin-login"
        class="text-sm px-4 py-2 rounded-md bg-[#169B62] text-white hover:bg-green-700 transition"
        title="Accéder à l’espace admin"
      >
        🔐 Connexion
      </a>
    </div>

    <h1 class="text-4xl font-bold mb-6 text-[#169B62]">🇮🇪 Carnet de route</h1>

    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
      {articles.map((article) => (
        <a
          href={`/articles/${article.slug}/`}
          class="border rounded-xl overflow-hidden shadow hover:shadow-lg transition bg-white dark:bg-gray-800"
        >
          {article.data.cover && (
            <img
              src={article.data.cover}
              alt={article.data.title}
              class="w-full h-48 object-cover"
            />
          )}
          <div class="p-4">
            <h2 class="text-xl font-semibold mb-2">{article.data.title}</h2>
            <p class="text-sm text-gray-500 mb-2">📅 {article.data.pubDate}</p>
            <p class="text-sm text-gray-500">
              💬 {commentCounts[article.slug] || 0} commentaire{commentCounts[article.slug] === 1 ? "" : "s"}
            </p>
          </div>
        </a>
      ))}
    </div>
  </section>
</Layout>
