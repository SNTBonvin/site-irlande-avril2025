---
// src/pages/index.astro
import "../styles/global.css";
import { getCollection } from 'astro:content';
const articles = await getCollection("articles");
---


<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Voyage en Irlande 2025</title>
    <link rel="stylesheet" href="/styles/global.css">
  </head>
  <body class="bg-[#eaf4ec] text-gray-800 font-sans">
    <header class="bg-[#169b62] text-white py-6 text-center">
      <h1 class="text-4xl font-bold">🇮🇪 Carnet de voyage en Irlande 2025 🇮🇪</h1>
    </header>

    <main class="p-6">
      <section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
        {articles.map(article => (
          <a href={`/articles/${article.slug}/`} class="block rounded-xl shadow hover:shadow-lg transition bg-white">
            <img src={article.data.cover} alt={article.data.title} class="w-full h-48 object-cover rounded-t-xl" />
            <div class="p-4">
              <h2 class="text-xl font-bold mb-1">{article.data.title}</h2>
              <p class="text-sm text-gray-500">🗓️ {article.data.pubDate}</p>
            </div>
          </a>
        ))}
      </section>
    </main>

    <footer class="bg-[#ff883e] text-white text-center py-4 mt-8">
      <p>&copy; 2025 - Bonvin en Irlande ☘️</p>
    </footer>
  </body>
</html>
