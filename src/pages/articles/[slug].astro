    async function loadComments(slug) {
      const list = document.getElementById("comment-list");
      const res = await fetch(`${SUPABASE_URL}/rest/v1/comments?slug=eq.${slug}&order=created_at.desc`, {
        headers: {
          apikey: SUPABASE_ANON_KEY,
